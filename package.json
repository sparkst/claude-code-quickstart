{
  "name": "claude-code-quickstart",
  "version": "1.0.1",
  "description": "Sparkry.AI quickstart for Claude Code + VS Code with Sabrina-style rules, safe permissions, and MCP servers pre-wired.",
  "bin": {
    "claude-code-quickstart": "bin/cli.js"
  },
  "scripts": {
    "postinstall": "node bin/postinstall.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint *.js bin/*.js",
    "format": "prettier --write *.js bin/*.js",
    "format:check": "prettier --check *.js bin/*.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "mcp",
    "vs-code",
    "sparkry.ai",
    "quickstart"
  ],
  "author": "Sparkry.AI",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "bin/",
    "templates/",
    "scripts/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "claude-code-quickstart": "file:claude-code-quickstart-1.0.0.tgz"
  }
