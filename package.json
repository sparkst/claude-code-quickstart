{
  "name": "claude-code-quickstart",
  "version": "1.1.0",
  "description": "Sparkry.AI quickstart for Claude Code + VS Code with Sabrina-style rules, safe permissions, and MCP servers pre-wired.",
  "bin": {
    "claude-code-quickstart": "bin/cli.js"
  },
  "scripts": {
    "postinstall": "node bin/postinstall.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint *.js bin/*.js",
    "format": "prettier --write *.js bin/*.js",
    "format:check": "prettier --check *.js bin/*.js",
    "ci:validate": "node scripts/ci-validation.js",
    "ci:local": "npm run format:check && npm run lint && npm run test:run",
    "pre-commit": "./scripts/pre-commit-hook.sh",
    "prepare": "command -v git >/dev/null 2>&1 && git config core.hooksPath .githooks || true"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.3.1",
    "eslint": "^9.35.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "mcp",
    "vs-code",
    "sparkry.ai",
    "quickstart"
  ],
  "author": "Sparkry.AI",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "bin/",
    "templates/",
    "scripts/",
    "README.md",
    "LICENSE"
  ]
}
